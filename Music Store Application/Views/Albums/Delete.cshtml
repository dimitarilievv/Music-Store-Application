@model MusicStore.Domain.Domain_Models.Album

@{
    ViewData["Title"] = "Delete Album";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var artist = ViewData["artist"] as MusicStore.Domain.Domain_Models.Artist;
    var genre = ViewData["genre"] as MusicStore.Domain.Domain_Models.Genre;
}
<div class="container mt-2">
    <h1>Delete Album</h1>

    <h3>Are you sure you want to delete this album?</h3>
    <div>
        <h4>Album</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CoverImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.CoverImageUrl" alt="Cover Image" style="max-width: 200px;" />
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price) $
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">@genre?.Name</dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">@artist?.FullName</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-warning" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>

</div>
